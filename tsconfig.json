{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node", // Ensure this line is included
    "baseUrl": ".",             // Optional: Helps with relative paths
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
